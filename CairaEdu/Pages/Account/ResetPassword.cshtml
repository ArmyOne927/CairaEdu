@page
@model CairaEdu.Pages.Account.ResetPasswordModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Restablecer Contraseña</title>
    <link rel="stylesheet" href="~/css/Login.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
</head>
<body>
    <section>
        <div class="form-box">
            <div class="form-left">
                <img src="~/img/Logo_Caira.png" alt="Logo CAIRA" />
                <p class="rubik-light" style="text-align: left; margin-top: 20px; font-size: 1.25em;">
                    Conectividad y <br>Acompañamiento<br>Integral en la <br>Ruta del <br>Aprendizaje
                </p>
            </div>

            <div class="form-right">
                <form method="post">
                    <h2 class="rubik-semibold">Nueva Contraseña</h2>

                    <input type="hidden" asp-for="Input.UserId" />
                    <input type="hidden" asp-for="Input.Token" />

                    <div class="inputbox">
                        <input asp-for="Input.NewPassword" type="password" required />
                        <label>Nueva contraseña</label>
                        <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
                    </div>

                    <div class="inputbox">
                        <input asp-for="Input.ConfirmPassword" type="password" required />
                        <label>Confirmar contraseña</label>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>

                    <button type="submit" class="roboto-semibold" style="display: flex; align-items: center; justify-content: center; margin: 0 auto; color: white;">
                        RESTABLECER
                    </button>
                </form>
            </div>
        </div>
    </section>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

    <script>
        $(function () {
            @if (TempData["Success"] != null)
            {
                    <text>toastr.success('@TempData["Success"]');</text>
            }
            @if (TempData["Error"] != null)
            {
                    <text>toastr.error('@TempData["Error"]');</text>
            }
        });
    </script>
</body>
</html>

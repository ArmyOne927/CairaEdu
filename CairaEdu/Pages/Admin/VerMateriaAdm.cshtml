@page
@model CairaEdu.Pages.Admin.VerMateriaAdmModel
@{
    Layout = "_AdminLayout";
}

<h2 class="mb-4 text-center">Materias Registradas</h2>

<a asp-page="/Admin/CrearMateriaAdm" class="btn btn-outline-success" style="margin-bottom: 15px;">Nueva materia</a>
<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
    @foreach (var materia in Model.Materias)
    {
        <div class="col">
            <div class="card h-100 shadow materia-card position-relative overflow-hidden">
                @if (!string.IsNullOrEmpty(materia.Imagen))
                {
                    <img src="@materia.Imagen" class="card-img-top" alt="Imagen de @materia.Nombre" style="object-fit: cover; height: 200px;">
                }
                else
                {
                    <div class="d-flex align-items-center justify-content-center bg-secondary text-white" style="height: 200px;">
                        <strong>@materia.Nombre</strong>
                    </div>
                }

                <div class="card-body">
                    <h5 class="card-title text-center">@materia.Nombre</h5>
                </div>

                <div class="materia-overlay p-3 text-white bg-dark bg-opacity-75">
                    <p><strong>Competencias:</strong> @materia.Competencias</p>
                    <p><strong>Objetivos:</strong> @materia.Objetivos</p>
                    <div class="mt-3 d-flex justify-content-between">
                        <a asp-page="EditarMateriaAdm" asp-route-id="@materia.Id" class="btn btn-warning btn-sm">Editar</a>
                        <form method="post" asp-page-handler="Eliminar" asp-route-id="@materia.Id" onsubmit="return confirm('¿Deseas eliminar esta materia?');">
                            <button type="submit" class="btn btn-danger btn-sm">Eliminar</button>
                        </form>
                    </div>
                </div>
                
            </div>
        </div>
    }
</div>